{
  "manifest_version": 3,
  "name": "Sentinel LLM Logger",
  "version": "0.1.0",
  "description": "Send LLM prompt logs to Sentinel Server using fixed JSON schema.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background/sw.js",
    "type": "module"
  },
  "action": {
    "default_title": "Sentinel",
    "default_popup": "src/ui/popup.html"
  },
  "options_page": "src/ui/options.html",
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["src/content/inject.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
